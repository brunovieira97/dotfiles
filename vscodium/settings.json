{
  // Editor
  "editor.cursorBlinking": "smooth",
  "editor.fontFamily": "Cascadia Code, Menlo, Monaco, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.guides.bracketPairs": "active",
  "editor.insertSpaces": false,
  "editor.wrappingIndent": "indent",

  // Terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Cascadia Code NF",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.rightClickBehavior": "default",
  
  // Workbench
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "none",

  // Window
  "window.dialogStyle": "native",
  "window.menuStyle": "native",
  "window.nativeTabs": false,
  "window.titleBarStyle": "custom",

  // Scroll fixes
  "editor.mouseWheelScrollSensitivity": 0.5,
  "workbench.list.mouseWheelScrollSensitivity": 0.5,

  // Debug
  "debug.toolBarLocation": "commandCenter",

  // Security
  "security.workspace.trust.enabled": false,

  // Explorer
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,

  // AI
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,

  // Privacy
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "telemetry.feedback.enabled": false,
  "telemetry.telemetryLevel": "off",
  "gitlens.telemetry.enabled": false,
  "redhat.telemetry.enabled": false,

  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.factorypath": true,
    "**/.settings": true,
    "**/node_modules": true,
    "**/target": true
  },

  // Git
  "git.blame.editorDecoration.enabled": false,
  "git.blame.editorDecoration.template": "${authorName}, ${authorDateAgo} â€¢ [${hashShort}] ${subject}",
  "git.branchSortOrder": "alphabetically",
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",

  // GitLens
  "gitlens.ai.enabled": false,
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm Z",
  "gitlens.defaultDateStyle": "relative",
  "gitlens.defaultGravatarsStyle": "mp",
  "gitlens.graph.layout": "editor",
  "gitlens.graph.minimap.enabled": false,
  "gitlens.integrations.enabled": false,
  "gitlens.launchpad.indicator.enabled": false,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.views.branches.branches.layout": "list",
  "gitlens.views.repositories.files.layout": "tree",
  "gitlens.views.showRelativeDateMarkers": false,

  // HTML
  "html.format.indentInnerHtml": true,
  "html.format.wrapAttributes": "force-expand-multiline",

  // Firefox
  "firefox.profile": "dev-edition-default",
  "firefox.keepProfileChanges": true,

  // Java
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.help.showReleaseNotes": false,

  // Spring
  "spring.initializr.parentFolder": "none",
}